<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#7AFF8C00"
        android:padding="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/baumaquip_main_color" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vertragDetailsBaumaschineName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_between_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@sample/baumaschineName" />

            <TextView
                android:id="@+id/textVertragDetailsBaumaschinenAnzahl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:gravity="center"
                android:text="@string/amount"

                app:layout_constraintStart_toEndOf="@+id/vertragDetailsBaumaschineName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/vertragDetailsBaumaschineAnzahl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_between_text_and_number"
                app:layout_constraintStart_toEndOf="@+id/textVertragDetailsBaumaschinenAnzahl"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@sample/baumaschinenAnzahl" />

            <TextView
                android:id="@+id/textVertragDetailsTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_between_new_text"
                android:text="@string/total_price"
                app:layout_constraintStart_toEndOf="@id/vertragDetailsBaumaschineAnzahl"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/baumaschineVertragDetailsTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_between_text_and_number"
                app:layout_constraintStart_toEndOf="@+id/textVertragDetailsTotalPrice"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@sample/baumaschinenPreis" />

            <include layout="@layout/modify_delete_buttons" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableConstraintLayoutVertagDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vertragDetailsBaumaschineName">


                <TextView
                    android:id="@+id/textVertragDetailsOperatingHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_text"
                    android:text="@string/operating_hours"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/baumaschineVertragDetailsOperatingHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_text_and_number"
                    android:text="200"
                    app:layout_constraintStart_toEndOf="@id/textVertragDetailsOperatingHours"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textVertragDetailsAmountOfGas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_new_text"
                    android:text="@string/amount_of_gas"
                    app:layout_constraintStart_toEndOf="@id/baumaschineVertragDetailsOperatingHours"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/baumschineVertragDetailsAmountOfGas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_text_and_number"
                    android:text="200"
                    app:layout_constraintStart_toEndOf="@id/textVertragDetailsAmountOfGas"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textVertragDetailsDegreeOfWear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_text"
                    android:layout_marginTop="@dimen/space_between_text"
                    android:text="@string/degree_of_wear"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textVertragDetailsOperatingHours" />

                <TextView
                    android:id="@+id/baumaschineVertragDetailsDegreeOfWear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_between_text"
                    android:layout_marginTop="@dimen/space_between_text"
                    android:text="20"
                    app:layout_constraintStart_toEndOf="@id/textVertragDetailsDegreeOfWear"
                    app:layout_constraintTop_toBottomOf="@id/baumaschineVertragDetailsOperatingHours" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>