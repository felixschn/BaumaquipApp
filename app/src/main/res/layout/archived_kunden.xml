<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Kunde.KundenFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/archivedKundenRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/recyclerview_kunden_item" />

    <TextView
        android:id="@+id/emptyArchivedKundenRecyclerviewTextView"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/emptyArchivedKundenRecyclerViewRecyclerView"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</FrameLayout>