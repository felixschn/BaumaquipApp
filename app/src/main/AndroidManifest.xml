<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_kurzlogo_final"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_kurzlogo_final"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaumaquipRentalApp"
        android:requestLegacyExternalStorage="true">

        <activity android:name=".ui.Kunde.AddKundenActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".ui.Vertraege.AddVertragActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.Baumaschine.AddBaumaschinenActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.Baumaschine.ArchivedBaumaschinenActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.Kunde.ArchivedKundenActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.Vertraege.ArchivedVertragActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.Vertraege.VertragDetailsActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".MainPageActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.BaumaquipRentalApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>